---
import Icon from "./ui/Icon/Icon.astro";
import Link from "./ui/link.astro";
const currentYear = new Date().getFullYear();
---

<footer>
  <div class="group">
    <p>
      Built with
      <Link
        class="link"
        href="https://astro.build/"
        title="Astro website"
        external
      >
        Astro
        <Icon icon="rocket-launch" size="1.2em" />
      </Link>
    </p>
    <p>&copy; {currentYear} Ayşenur Arslan</p>
  </div>
  <p class="socials">
    <Link
      class="link flex-link"
      href="https://www.linkedin.com/in/ay%C5%9Fenur-arslan/"
      title="View Ayşenur's LinkedIn Profile"
      external
    >
      <Icon icon="linkedin" size="1.2em" />
      <span>LinkedIn</span>
    </Link>
    <Link
      class="link flex-link"
      href="https://github.com/aysenurarslann"
      title="View Ayşenur's GitHub Profile"
      external
    >
      <Icon icon="github-logo" size="1.2em" />
      <span>GitHub</span>
    </Link>
    <Link
      class="link flex-link"
      href="https://codingly.netlify.app/"
      title="View Ayşenur's Coding Blog"
      external
    >
      <Icon icon="codeblock" size="1.2em" />
      <span>Blog</span>
    </Link>
    
  </p>
</footer>
<style>
  footer {
    display: flex;
    flex-direction: column;
    gap: 3rem;
    margin-top: auto;
    padding: 3rem 2rem 3rem;
    text-align: center;
    color: var(--gray-400);
    font-size: var(--text-sm);

    .link {
      color: var(--gray-400);
    }

    .flex-link {
      display: flex;
      align-items: center;
      gap: 0.35rem;
    }
  }

  .group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .socials {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
    color: var(--gray-400);
  }

  @media (min-width: 50em) {
    footer {
      flex-direction: row;
      justify-content: space-between;
      padding: 2.5rem 5rem;
    }

    .group {
      flex-direction: row;
      gap: 1rem;
      flex-wrap: wrap;
    }

    .socials {
      justify-content: flex-end;
    }
  }
</style>
